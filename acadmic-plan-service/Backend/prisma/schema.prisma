datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AcademicPlan {
  id        Int       @id @default(autoincrement())
  studentId Int
  semesters Semester[] 
}

model Semester {
  id            Int      @id @default(autoincrement())
  name          String
  academicPlanId Int
  courses       Course[]
  AcademicPlan  AcademicPlan @relation(fields: [academicPlanId], references: [id], onDelete: Cascade)
}

model Course {
  id         Int      @id @default(autoincrement())
  code       String
  title      String
  credits    Int
  description String?
  prerequisites String[]
  semesterId Int
  Semester   Semester @relation(fields: [semesterId], references: [id], onDelete: Cascade)
}

