# Development image for Kubernetes with optimized build
FROM node:18-alpine as builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build for production (skipping TypeScript checks)
ENV VITE_APP_ENV=development
ENV NODE_ENV=development
ENV SKIP_PREFLIGHT_CHECK=true
RUN npm run build-only

# Create a script that modifies index.html with localStorage initialization
WORKDIR /app/dist
RUN echo 'localStorage.setItem("kt-auth-react-v", JSON.stringify({api_token:"dev-bypass-token",refreshToken:"dev-bypass-refresh-token"}));' > auth-setup.js

# Inject the script into index.html
RUN sed -i 's/<head>/<head><script src="auth-setup.js"><\/script>/' index.html

# Production stage with Nginx
FROM nginx:alpine

# Copy built assets from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

# Start Nginx server
CMD ["nginx", "-g", "daemon off;"]
